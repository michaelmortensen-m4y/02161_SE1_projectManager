<GridPane fx:id="addNewActivityWindow" prefHeight="600.0" prefWidth="600.0" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.AddNewActivityMenuController">
    <Label text="New activity:" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2">
      <GridPane.margin><Insets left="10.0" right="10.0" bottom="0" top="0" /></GridPane.margin>
    </Label>
    <TextField fx:id="activityField" text="Activity name" prefWidth="170" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2">
      <GridPane.margin><Insets left="10.0" right="10.0" bottom="2.0" top="2.0" /></GridPane.margin>
    </TextField>
    <TextField fx:id="budgetedTimeField" text="Budgeted time" prefWidth="170" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2">
      <GridPane.margin><Insets left="10.0" right="10.0" bottom="2.0" top="2.0" /></GridPane.margin>
    </TextField>
    <TextField fx:id="startDateField" text="Start week and year (w yyyy)" prefWidth="170" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2">
      <GridPane.margin><Insets left="10.0" right="10.0" bottom="2.0" top="2.0" /></GridPane.margin>
    </TextField>
    <TextField fx:id="endDateField" text="End week and year (w yyyy)" prefWidth="170" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2">
      <GridPane.margin><Insets left="10.0" right="10.0" bottom="2.0" top="2.0" /></GridPane.margin>
    </TextField>
    <TextField fx:id="employeesField" text="Assign employees (aaaa bbbb ...)" prefWidth="170" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2">
      <GridPane.margin><Insets left="10.0" right="10.0" bottom="2.0" top="2.0" /></GridPane.margin>
    </TextField>
    <Button fx:id="addButton" mnemonicParsing="false" text="Add" prefWidth="80" onMouseClicked="#addActivityMouseClicked" GridPane.columnIndex="0" GridPane.rowIndex="6">
      <GridPane.margin><Insets left="10.0" right="10.0" bottom="10.0" top="2.0" /></GridPane.margin>
    </Button>
    <Button fx:id="removeButton" mnemonicParsing="false" text="Remove" prefWidth="80" onMouseClicked="#removeActivityMouseClicked" GridPane.columnIndex="1" GridPane.rowIndex="6">
      <GridPane.margin><Insets left="10.0" right="10.0" bottom="10.0" top="2.0" /></GridPane.margin>
    </Button>
    <Button fx:id="exportButton" mnemonicParsing="false" text="Export project report" prefWidth="180" onMouseClicked="#exportMouseClicked" GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.columnSpan="2">
      <GridPane.margin><Insets left="10.0" right="10.0" bottom="2.0" top="20.0" /></GridPane.margin>
    </Button>
    <Button fx:id="okButton" mnemonicParsing="false" text="OK" prefWidth="180" onMouseClicked="#okMouseClicked" GridPane.columnIndex="0" GridPane.rowIndex="8" GridPane.columnSpan="2">
      <GridPane.margin><Insets left="10.0" right="10.0" bottom="2.0" top="20.0" /></GridPane.margin>
    </Button>
    <Button fx:id="cancelButton" mnemonicParsing="false" text="Cancel" prefWidth="180" onMouseClicked="#cancelMouseClicked" GridPane.columnIndex="0" GridPane.rowIndex="9" GridPane.columnSpan="2">
      <GridPane.margin><Insets left="10.0" right="10.0" bottom="0.0" top="2.0" /></GridPane.margin>
    </Button>
    <Label text="Added activities:" GridPane.columnIndex="2" GridPane.rowIndex="0">
      <GridPane.margin><Insets left="20.0" right="10.0" bottom="0" top="0" /></GridPane.margin>
    </Label>
    <TextArea fx:id="addedActivitiesTextArea" PrefRowCount="15" WrapText="false" editable="false" focusTraversable="false" prefWidth="350" GridPane.columnIndex="2" GridPane.rowIndex="1" GridPane.rowSpan="9">
      <GridPane.margin><Insets left="20.0" right="10.0" bottom="0" top="0" /></GridPane.margin>
    </TextArea>
</GridPane>