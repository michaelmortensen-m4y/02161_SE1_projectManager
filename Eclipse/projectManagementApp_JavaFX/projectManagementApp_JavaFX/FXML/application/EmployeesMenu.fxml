<GridPane fx:id="employeesMenuWindow" prefHeight="600.0" prefWidth="600.0" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.EmployeesMenuController">
    <Label text="Options:" GridPane.columnIndex="0" GridPane.rowIndex="0">
      <GridPane.margin><Insets left="10.0" right="10.0" bottom="0" top="0" /></GridPane.margin>
    </Label>
    <TextField fx:id="initialsField" text="Employee initials" prefWidth="170" GridPane.columnIndex="0" GridPane.rowIndex="1">
      <GridPane.margin><Insets left="10.0" right="10.0" bottom="2.0" top="2.0" /></GridPane.margin>
    </TextField>
    <TextField fx:id="startDateField" text="Start week and year (w yyyy)" prefWidth="170" GridPane.columnIndex="0" GridPane.rowIndex="2">
      <GridPane.margin><Insets left="10.0" right="10.0" bottom="2.0" top="2.0" /></GridPane.margin>
    </TextField>
    <TextField fx:id="endDateField" text="End week and year (w yyyy)" prefWidth="170" GridPane.columnIndex="0" GridPane.rowIndex="3">
      <GridPane.margin><Insets left="10.0" right="10.0" bottom="2.0" top="2.0" /></GridPane.margin>
    </TextField>
    <Button fx:id="checkButton" mnemonicParsing="false" text="Check employee" prefWidth="170" onMouseClicked="#checkEmployeeMouseClicked" GridPane.columnIndex="0" GridPane.rowIndex="4">
      <GridPane.margin><Insets left="10.0" right="10.0" bottom="2.0" top="2.0" /></GridPane.margin>
    </Button>
    <Button fx:id="listAvailableEmployeesButton" mnemonicParsing="false" text="List available employees" prefWidth="170" onMouseClicked="#listAvailableEmployeesMouseClicked" GridPane.columnIndex="0" GridPane.rowIndex="5">
      <GridPane.margin><Insets left="10.0" right="10.0" bottom="2.0" top="2.0" /></GridPane.margin>
    </Button>
    <Button fx:id="backButton" mnemonicParsing="false" text="Back" prefWidth="170" onMouseClicked="#backMouseClicked" GridPane.columnIndex="0" GridPane.rowIndex="6">
      <GridPane.margin><Insets left="10.0" right="10.0" bottom="0.0" top="90.0" /></GridPane.margin>
    </Button>
    <Label text="Available employee(s):" GridPane.columnIndex="1" GridPane.rowIndex="0">
      <GridPane.margin><Insets left="20.0" right="10.0" bottom="0" top="0" /></GridPane.margin>
    </Label>
    <TextArea fx:id="myPersonalActivitiesTextArea" PrefRowCount="15" WrapText="false" editable="false" focusTraversable="false" prefWidth="350" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.rowSpan="6">
      <GridPane.margin><Insets left="20.0" right="10.0" bottom="0" top="0" /></GridPane.margin>
    </TextArea>
</GridPane>